---
import config from "virtual:lightnet/config"
import LightNetLogo from "./LightNetLogo.svg"

if (!config.credits) {
  return
}
---

<footer class="flex justify-center px-4 py-2 md:px-8">
  <a
    class="flex items-center gap-1 py-2 text-xs hover:underline"
    href="https://lightnet.community"
  >
    <LightNetLogo class="h-4" />
    {Astro.locals.i18n.t("ln.footer.powered-by-lightnet")}
  </a>
</footer>
