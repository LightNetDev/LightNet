---
import config from "virtual:lightnet/config"
import LightNetLogo from "./LightNetLogo.svg"

if (!config.credits) {
  return
}
---

<footer class="flex justify-center border-t border-gray-200 px-4 py-8 md:px-8">
  <a
    class="flex items-center gap-2 py-2 text-sm text-gray-700 hover:underline"
    href="https://lightnet.community"
  >
    <LightNetLogo class="h-6" />
    {Astro.locals.i18n.t("ln.footer.built-with-lightnet")}
  </a>
</footer>
