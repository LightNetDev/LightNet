---
import Icon from "../../components/Icon"

interface Props {
  icon: string
  label: string
  disabled?: boolean
}

const { icon, label, disabled } = Astro.props
---

<div class="dy-dropdown dy-dropdown-end">
  <div
    tabindex={disabled ? undefined : "0"}
    role={disabled ? undefined : "button"}
    aria-disabled={disabled}
    aria-label={Astro.locals.i18n.t(label)}
    class={`flex rounded-md p-3 ${disabled ? "text-gray-300" : "text-gray-600 hover:text-primary"}`}
  >
    <Icon className={icon} ariaLabel="" />
  </div>

  <ul
    tabindex="0"
    class="dy-menu dy-dropdown-content top-px me-3 mt-[3.25rem] w-48 overflow-hidden rounded-b-md bg-white py-3 shadow-lg sm:mt-16"
  >
    <slot />
  </ul>
</div>
