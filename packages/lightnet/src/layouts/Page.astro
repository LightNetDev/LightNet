---
import CustomFooter from "virtual:lightnet/components/CustomFooter"
import CustomHead from "virtual:lightnet/components/CustomHead"
import config from "virtual:lightnet/config"

import { resolveLanguage } from "../i18n/resolve-language"
import Favicon from "./components/Favicon.astro"
import Footer from "./components/Footer.astro"
import Header from "./components/Header.astro"
import PreloadReact from "./components/PreloadReact"
import ViewTransition from "./components/ViewTransition.astro"

interface Props {
  title?: string
  description?: string
  mainClass?: string
  locale?: string
}

const { title, description, mainClass, locale } = Astro.props
const configTitle = Astro.locals.i18n.t(config.title)

const currentLocale = locale ?? Astro.locals.i18n.currentLocale
const { direction } = resolveLanguage(currentLocale)
---

<!doctype html>
<html lang={currentLocale} dir={direction}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {CustomHead && <CustomHead />}
    <title>{title ? `${title} | ${configTitle}` : configTitle}</title>
    {description && <meta name="description" content={description} />}
    {config.manifest && <link rel="manifest" href={config.manifest} />}
    <link rel="prefetch" href="/api/internal/search.json" />
    <Favicon />
    <ViewTransition />
  </head>
  <body
    class="flex min-h-screen flex-col overflow-y-scroll bg-gray-50 text-gray-900"
    ontouchstart=""
    tabindex="-1"
  >
    <Header />
    <main class={`grow pb-8 pt-14 sm:py-20 ${mainClass ?? ""}`}>
      <slot />
    </main>
    {CustomFooter ? <CustomFooter /> : <Footer />}
    <PreloadReact client:idle />
  </body><script>
    document.body.addEventListener(
      "touchstart",
      function () {
        // no-op; just here to wake up iOS Safari
        // https://github.com/saadeghi/daisyui/issues/3454
        // https://dev.webonomic.nl/fixing-the-iphone-css-hover-problem-on-ios
      },
      { passive: true },
    )
  </script>
</html>
