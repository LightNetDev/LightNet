---
import { getMediaItem } from "../../../content/get-media-items"

interface Props {
  mediaId: string
  className?: string
}

const item = await getMediaItem(Astro.props.mediaId)
---

<h1
  class="text-4xl font-bold sm:text-5xl"
  lang={item.data.language}
  class:list={Astro.props.className}
>
  {item.data.title}
</h1>
