---
import { getMediaItem } from "../../../content/get-media-items"

interface Props {
  slug: string
}

const item = await getMediaItem(Astro.props.slug)
const authors = item.data.authors?.join(", ")
---

<div
  class="mx-auto mt-8 max-w-screen-md px-4 text-center sm:mt-12 md:px-8"
  lang={item.data.language}
>
  <h1 class="text-3xl font-bold sm:text-4xl">
    {item.data.title}
  </h1>
  {authors && <p class="mt-3 text-xl sm:mt-4 sm:text-2xl">{authors}</p>}
</div>
