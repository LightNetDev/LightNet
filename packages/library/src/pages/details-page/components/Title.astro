---
import { getMediaItem } from "../../../content/get-media-items"

interface Props {
  slug: string
  className?: string
}

const item = await getMediaItem(Astro.props.slug)
---

<h1
  class="text-3xl font-bold sm:text-4xl"
  lang={item.data.language}
  class:list={Astro.props.className}
>
  {item.data.title}
</h1>
