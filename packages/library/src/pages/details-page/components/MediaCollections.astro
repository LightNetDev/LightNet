---
import { getMediaItem } from "../../../content/get-media-items"
import MediaCollection from "./MediaCollection.astro"

interface Props {
  mediaItemId: string
}

const { mediaItemId } = Astro.props
const item = await getMediaItem(mediaItemId)

const collections = item.data.collections?.map(
  ({ collection }) => collection.id,
)
---

{
  collections?.map((id) => (
    <MediaCollection collectionId={id} excludeItem={mediaItemId} />
  ))
}
