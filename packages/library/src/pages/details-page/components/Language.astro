---
import { contentLanguages } from "../../../content/get-languages"
import { resolveLanguage } from "../../../i18n/resolve-language"
import { useTranslate } from "../../../i18n/use-translate"
import Label from "./Label.astro"

interface Props {
  language: string
}

const t = useTranslate(Astro.currentLocale)
---

{
  contentLanguages.length > 1 && (
    <>
      <Label>{t("ln.common.language")}</Label>
      <div class="text-sm">{resolveLanguage(Astro.props.language).name}</div>
    </>
  )
}
