---
import { contentLanguagesCount } from "../../../content/get-languages"
import { resolveLanguageLabel } from "../../../i18n/resolve-language"
import { useTranslate } from "../../../i18n/use-translate"
import Label from "./Label.astro"

interface Props {
  language: string
}

const t = useTranslate(Astro.currentLocale)
---

{
  contentLanguagesCount > 1 && (
    <>
      <Label>{t("ln.common.language")}</Label>
      <div class="text-sm">{resolveLanguageLabel(Astro.props.language)}</div>
    </>
  )
}
