---
import type { Props } from "../details-props"
import Categories from "./Categories.astro"
import Language from "./Language.astro"
import ShareButton from "./ShareButton.astro"
import Translations from "./Translations.astro"

const {
  slug,
  mediaItem: { title, authors, commonId, language, categories },
} = Astro.props
---

<div class="mt-8 flex justify-between gap-4 sm:mt-0">
  <div>
    <h1 class="text-4xl">
      {title}
    </h1>
    {!!authors?.length && <p class="mt-2">{authors.join(", ")}</p>}
  </div>
  <ShareButton className="-mr-4 -mt-2" />
</div>
<Language language={language} />
<Translations slug={slug} commonId={commonId} />
<Categories categories={categories} />
