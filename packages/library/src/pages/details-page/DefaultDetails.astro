---
import DetailsButton from "./components/actions/DetailsButton.astro"
import DownloadsButton from "./components/actions/DownloadButton.astro"
import MainActionButton from "./components/actions/MainActionButton.astro"
import ShareButton from "./components/actions/ShareButton.astro"
import Authors from "./components/Authors.astro"
import Content from "./components/Content.astro"
import Cover from "./components/Cover.astro"
import Description from "./components/Description.astro"
import Details from "./components/details/Details.astro"
import MediaCollections from "./components/MediaCollections.astro"
import Title from "./components/Title.astro"

export type Props = {
  slug: string
  coverStyle?: "default" | "book"
  openActionLabel?: string
}

const {
  slug,
  coverStyle = "default",
  openActionLabel = "ln.details.open",
} = Astro.props
---

<div
  class="mx-auto mt-10 flex max-w-screen-md flex-col items-center gap-8 px-4 sm:mt-20 md:flex-row md:items-start md:gap-16 md:px-8"
>
  <Cover slug={slug} style={coverStyle} />
  <div class="flex flex-col items-center md:items-start">
    <Title className="text-center md:text-start" slug={slug} />
    <Authors className="text-center md:text-start" slug={slug} />
    <MainActionButton slug={slug} openActionLabel={openActionLabel} />
    <div class="mt-4 flex flex-wrap justify-center gap-4 sm:justify-start">
      <ShareButton />
      <DownloadsButton slug={slug} />
      <DetailsButton />
    </div>
  </div>
</div>
<Description slug={slug} />
<Content slug={slug} />
<MediaCollections slug={slug} />
<Details slug={slug} />
