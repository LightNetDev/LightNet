---
import Authors from "./new-components/Authors.astro"
import Cover from "./new-components/Cover.astro"
import Description from "./new-components/Description.astro"
import Details from "./new-components/details/Details.astro"
import DetailsButton from "./new-components/DetailsButton.astro"
import DownloadsButton from "./new-components/DownloadsButton.astro"
import MediaCollections from "./new-components/MediaCollections.astro"
import OpenButton from "./new-components/OpenButton.astro"
import ShareButton from "./new-components/ShareButton.astro"
import Title from "./new-components/Title.astro"

export type Props = {
  slug: string
  style?: "base" | "book"
}

const { slug, style = "base" } = Astro.props
---

<div
  class="mx-auto mt-12 flex max-w-screen-md flex-col items-center gap-8 px-4 sm:mt-16 md:flex-row md:items-start md:gap-16 md:px-8"
>
  <Cover slug={slug} style={style} />
  <div class="flex flex-col items-center md:items-start">
    <Title slug={slug} />
    <Authors slug={slug} />
    <OpenButton slug={slug} />
    <div class="mt-4 flex flex-wrap justify-center gap-2">
      <ShareButton />
      <DownloadsButton slug={slug} />
      <DetailsButton />
    </div>
  </div>
</div>
<Description slug={slug} />
<MediaCollections slug={slug} />
<Details slug={slug} />
