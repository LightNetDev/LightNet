---
import Cover from "./new-components/Cover.astro"
import Description from "./new-components/Description.astro"
import Details from "./new-components/details/Details.astro"
import MediaCollections from "./new-components/MediaCollections.astro"
import OpenButton from "./new-components/OpenButton.astro"
import ShareButton from "./new-components/ShareButton.astro"
import Title from "./new-components/Title.astro"

export type Props = {
  slug: string
  style?: "base" | "book"
}

const { slug, style = "base" } = Astro.props
---

<Cover slug={slug} style={style} />
<Title slug={slug} />
<div class="mx-auto flex flex-col items-center px-4 md:px-8">
  <OpenButton slug={slug} />
  <ShareButton />
</div>
<Description slug={slug} />
<MediaCollections slug={slug} />
<Details slug={slug} />
