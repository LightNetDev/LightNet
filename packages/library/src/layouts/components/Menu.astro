---
import Icon from "../../components/Icon"
import { useTranslate } from "../../i18n/use-translate"

interface Props {
  icon: string
  label: string
}

const { icon, label } = Astro.props

const t = useTranslate(Astro.currentLocale)
---

<div class="dy-dropdown dy-dropdown-end">
  <div
    role="button"
    tabindex="0"
    aria-label={t(label)}
    class="hover:text-primary flex rounded-md p-3 text-gray-600"
  >
    <Icon class={icon} />
  </div>

  <ul
    tabindex="0"
    class="dy-dropdown-content top-px mr-3 mt-14 w-48 overflow-hidden rounded-md bg-gray-50 shadow-lg sm:mt-[4.25rem]"
  >
    <slot />
  </ul>
</div>
