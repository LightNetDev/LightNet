---
import Icon from "../../components/Icon"
import { useTranslate } from "../../i18n/use-translate"

interface Props {
  icon: string
  label: string
}

const { icon, label } = Astro.props

const t = useTranslate(Astro.currentLocale)
---

<div class="dy-dropdown dy-dropdown-end" data-testid="language-switch">
  <div
    role="button"
    tabindex="0"
    aria-label={t(label)}
    class="hover:text-primary flex rounded-md p-3 text-gray-600"
  >
    <Icon className={icon} />
  </div>

  <ul
    tabindex="0"
    class="dy-dropdown-content top-px mr-3 mt-[3.25rem] w-48 overflow-hidden rounded-b-md bg-gray-50 py-3 shadow-lg sm:mt-16"
  >
    <slot />
  </ul>
</div>
