---
import Icon from "../../components/Icon"
import { useTranslate } from "../../i18n/use-translate"

interface Props {
  icon: string
  label: string
}

const { icon, label } = Astro.props

const t = useTranslate(Astro.currentLocale)
---

<div class="dy-dropdown dy-dropdown-end">
  <button
    aria-label={t(label)}
    class="hover:text-primary flex rounded-md p-3 text-gray-600"
  >
    <Icon class={icon} />
  </button>

  <ul
    class="dy-dropdown-content top-px mr-3 mt-14 w-48 overflow-hidden rounded-sm bg-gray-50/95 shadow-lg sm:mt-[4.25rem]"
  >
    <slot />
  </ul>
</div>
