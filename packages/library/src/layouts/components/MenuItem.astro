---
interface Props {
  href: string
  active: boolean
  hreflang?: string
  target?: "_blank" | "_self"
}
const { href, hreflang, active, target } = Astro.props
---

<li>
  <a
    href={href}
    hreflang={hreflang}
    target={target}
    class="group flex h-12 items-center gap-3 px-4"
  >
    <slot name="before" />
    <span
      class="flex items-center gap-3 decoration-gray-800"
      class:list={[!active && "group-hover:underline", active && "font-bold"]}
    >
      <slot />
    </span>
  </a>
</li>
