---
interface Props {
  href: string;
  active: boolean;
  hreflang?: string;
  target?: "_blank" | "_self";
}
const { href, hreflang, active, target } = Astro.props;
---

<li>
  <a
    href={href}
    hreflang={hreflang}
    target={target}
    class="flex items-center gap-3 px-6 py-3 decoration-gray-800"
    class:list={[active ? "font-bold" : "hover:underline"]}
  >
    <slot />
  </a>
</li>
