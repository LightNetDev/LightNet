---
interface Props {
  href: string
  active: boolean
  hreflang?: string
  target?: "_blank" | "_self"
}
const { href, hreflang, active, target } = Astro.props
---

<li>
  <a
    href={href}
    hreflang={hreflang}
    target={target}
    class="group flex h-12 items-center gap-3 px-6"
  >
    <slot name="before" />
    <span
      class="text-sm underline decoration-transparent duration-200 hover:transition-colors"
      class:list={[
        !active && "group-hover:decoration-gray-800",
        active && "font-bold",
      ]}
    >
      <slot />
    </span>
  </a>
</li>
