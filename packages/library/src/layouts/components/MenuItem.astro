---
interface Props {
  href: string
  active: boolean
  hreflang?: string
  target?: "_blank" | "_self"
}
const { href, hreflang, active, target } = Astro.props
---

<li>
  <a
    href={href}
    hreflang={hreflang}
    target={target}
    class="flex items-center gap-3 p-5"
    class:list={[
      !active && "text-gray-900 hover:bg-gray-200",
      active && "bg-gray-900 text-gray-100 hover:bg-gray-950",
    ]}
  >
    <slot />
  </a>
</li>
