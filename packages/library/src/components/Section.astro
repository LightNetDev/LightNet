---
interface Props {
  id?: string
  width?: "full" | "content"
  title?: string
  withoutDefaultTopMargin?: boolean
  lang?: string
  className?: string
}

const {
  id,
  width = "full",
  title,
  withoutDefaultTopMargin = false,
  lang,
  className,
} = Astro.props

const widths = {
  full: "max-w-screen-xl",
  content: "max-w-screen-lg",
}
---

<section
  class="mx-auto px-4 md:px-8"
  class:list={[
    widths[width],
    !withoutDefaultTopMargin && "mt-16 md:mt-20",
    className,
  ]}
  id={id}
  lang={lang}
>
  {
    title && (
      <h2 class="mb-4 text-2xl font-bold text-gray-700 sm:mb-6 sm:text-3xl">
        {title}
      </h2>
    )
  }
  <slot />
</section>
