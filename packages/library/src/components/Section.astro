---
interface Props {
  id?: string
  width?: "full" | "content"
  title?: string
  lang?: string
  className?: string
}

const { id, width = "full", title, lang, className } = Astro.props

const widths = {
  full: "max-w-screen-xl",
  content: "max-w-screen-md",
}
---

<section
  class="mx-auto mt-24 px-4 md:mt-28 md:px-8"
  class:list={[widths[width], className]}
  id={id}
  lang={lang}
>
  {
    title && (
      <h2 class="mb-10 text-2xl font-bold text-gray-700 sm:mb-12 sm:text-3xl">
        {title}
      </h2>
    )
  }
  <slot />
</section>
